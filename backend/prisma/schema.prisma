generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ───────────────────────────────────────────────
//   Commune
// ───────────────────────────────────────────────

model Communes {
  id            Int          @id @default(autoincrement())
  nom           String
  code_postal   String?
  population    Int
  actif         Boolean       @default(true)
  date_creation DateTime      @default(now())

  utilisateurs  Utilisateurs[]
  interventions Interventions[]
}

// ───────────────────────────────────────────────
//   Thème de question
// ───────────────────────────────────────────────

model Themes {
  id            Int           @id @default(autoincrement())
  designation   String
  actif         Boolean        @default(true)
  date_creation DateTime       @default(now())

  interventions     Interventions[]
  retentionPolicies RetentionPolicy[]
}


// ───────────────────────────────────────────────
//   Utilisateur
// ───────────────────────────────────────────────

model Utilisateurs {
  id            Int           @id @default(autoincrement())
  role          String
  nom           String
  prenom        String
  email         String        @unique
  mot_de_passe  String
  actif         Boolean       @default(true)
  date_creation DateTime      @default(now())

  // Sécurité / gestion de compte
  reset_token                String?
  reset_token_expiry         DateTime?
  email_temp                 String?
  email_confirmation_token   String?
  email_confirmation_expiry  DateTime?

  commune_id    Int?
  commune       Communes?     @relation(fields: [commune_id], references: [id], onDelete: SetNull)

  interventions_demandees Interventions[] @relation("InterventionDemandeur")
  interventions_traitees  Interventions[] @relation("InterventionJuriste")

  archives_crees Archive[] @relation("ArchiveCreePar")
}

// ───────────────────────────────────────────────
//   Intervention (question / réponse)
// ───────────────────────────────────────────────

model Interventions {
  id              Int       @id @default(autoincrement())
  titre           String?
  description     String?   // contenu de la question
  reponse         String?
  notes           String?
  satisfaction    Int?
  date_question   DateTime  @default(now())
  date_reponse    DateTime?
  date_creation   DateTime  @default(now())

  commune_id      Int
  demandeur_id    Int
  juriste_id      Int?
  theme_id        Int?

  commune         Communes     @relation(fields: [commune_id], references: [id], onDelete: Cascade)
  demandeur       Utilisateurs @relation("InterventionDemandeur", fields: [demandeur_id], references: [id], onDelete: Cascade)
  juriste         Utilisateurs? @relation("InterventionJuriste", fields: [juriste_id], references: [id], onDelete: SetNull)
  theme           Themes?      @relation(fields: [theme_id], references: [id], onDelete: SetNull)

  pieces_jointes  PiecesJointes[]
}


// ───────────────────────────────────────────────
//   Pièces jointes 
// ───────────────────────────────────────────────

model PiecesJointes {
  id              Int       @id @default(autoincrement())
  nom_original    String
  nom_fichier     String
  chemin          String
  date_creation   DateTime  @default(now())

  intervention_id Int
  intervention    Interventions @relation(fields: [intervention_id], references: [id], onDelete: Cascade)
}

// ───────────────────────────────────────────────
//   Politique de rétention (durée de conservation RGPD)
// ───────────────────────────────────────────────

model RetentionPolicy {
  id          Int      @id @default(autoincrement())
  theme_id    Int
  duree_mois  Int
  description String

  theme Themes @relation(fields: [theme_id], references: [id])
}

// ───────────────────────────────────────────────
//   Archive (traçabilité des suppressions)
// ───────────────────────────────────────────────

model Archive {
  id               Int       @id @default(autoincrement())
  table_name       String
  entity_id        Int
  entity_data      Json
  raison           String?
  archived_by_id   Int?
  date_archivage   DateTime  @default(now())
  date_suppression DateTime?

  archived_by Utilisateurs? @relation("ArchiveCreePar", fields: [archived_by_id], references: [id], onDelete: SetNull)

  @@unique([table_name, entity_id])
  @@map("archives")
}
